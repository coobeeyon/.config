[global]
    # Enhanced styling with more visual impact
    frame_width = 3
    frame_color = "#88c0d0"
    corner_radius = 15
    
    # Bold typography for impact
    font = "JetBrains Mono Bold 22"
    
    # Allow markup for rich text formatting
    markup = full
    
    # Enhanced format with icons and better visual hierarchy
    format = "<span foreground='#88c0d0' size='large' rise='2000'>‚óè</span> <b><span size='large'>%s</span></b> %p\n<span alpha='90%%'>%b</span>"
    
    # Sort messages by urgency
    sort = yes
    
    # Show hidden message count with better styling
    indicate_hidden = yes
    
    # Text alignment
    alignment = left
    
    # Show age for older messages
    show_age_threshold = 60
    
    # Enable word wrapping for better readability
    word_wrap = yes
    
    # Handle newlines properly
    ignore_newline = no
    
    # Modern notification sizing and positioning
    width = (400, 600)
    height = (80, 400)
    origin = top-right
    offset = (20, 50)
    
    # Subtle transparency for modern look
    transparency = 5
    
    # Idle threshold
    idle_threshold = 120
    
    # Monitor settings
    monitor = 0
    follow = mouse
    
    # History settings
    sticky_history = yes
    history_length = 50
    
    # Enhanced indicators
    show_indicators = yes
    
    # Better line spacing
    line_height = 3
    
    # Modern separator styling
    separator_height = 2
    
    # Enhanced padding for better visual balance
    padding = 20
    horizontal_padding = 20
    
    # Vibrant separator color
    separator_color = "#5e81ac"
    
    # Progress bar styling
    progress_bar = true
    progress_bar_height = 14
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    
    # dmenu path.
    dmenu = /usr/bin/dmenu -p dunst:
    
    # Browser for opening urls in context menu.
    browser = palemoon

    # Align icons left/right/off
    icon_position = left

    # Paths to default icons.
    icon_path = /usr/share/icons/Adwaita/16x16/status/:/usr/share/icons/Adwaita/16x16/devices/

    # Limit icons size.
    max_icon_size = 128
    
    # Keyboard shortcuts (moved from deprecated [shortcuts] section)
    # Close notification
    close = mod1+space
    # Close all notifications  
    close_all = ctrl+mod1+space
    # Redisplay last message(s)
    history = ctrl+mod4+h
    # Context menu
    context = ctrl+mod1+c

[urgency_low]
    # Low priority with soft green accent
    background = "#2e3440"
    foreground = "#d8dee9"
    frame_color = "#a3be8c"
    highlight = "#a3be8c"
    timeout = 8

[urgency_normal]
    # Standard notifications with vibrant blue accent
    background = "#2e3440"
    foreground = "#eceff4"
    frame_color = "#88c0d0"
    highlight = "#88c0d0"
    timeout = 10

[urgency_critical]
    # Critical with pulsing red effect
    background = "#2e3440"
    foreground = "#eceff4"
    frame_color = "#bf616a"
    highlight = "#bf616a"
    timeout = 0


# Every section that isn't one of the above is interpreted as a rules to
# override settings for certain messages.
# Messages can be matched by "appname", "summary", "body", "icon", "category",
# "msg_urgency" and you can override the "timeout", "urgency", "foreground",
# "background", "new_icon" and "format".
# Shell-like globbing will get expanded.
#
# SCRIPTING
# You can specify a script that gets run when the rule matches by
# setting the "script" option.
# The script will be called as follows:
#   script appname summary body icon urgency
# where urgency can be "LOW", "NORMAL" or "CRITICAL".
# 
# NOTE: if you don't want a notification to be displayed, set the format
# to "".
# NOTE: It might be helpful to run dunst -print in a terminal in order
# to find fitting options for rules.

#[espeak]
#    summary = "*"
#    script = dunst_espeak.sh

#[script-test]
#    summary = "*script*"
#    script = dunst_test.sh

